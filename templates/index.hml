<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consultas Lingüísticas</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
        <h1 class="text-2xl font-bold mb-4 text-center">Consultas Lingüísticas</h1>
        <div class="mb-4">
            <textarea id="pregunta" class="w-full p-2 border rounded" rows="4" placeholder="Ingrese su pregunta aquí..."></textarea>
        </div>
        <button onclick="hacerConsulta()" class="w-full bg-blue-500 text-white p-2 rounded hover:bg-blue-600">Consultar</button>
        <div id="respuesta" class="mt-4 p-4 bg-gray-100 rounded hidden"></div>
    </div>

    <script>
        async function hacerConsulta() {
            const pregunta = document.getElementById('pregunta').value;
            const respuestaDiv = document.getElementById('respuesta');
            respuestaDiv.innerHTML = 'Cargando...';
            respuestaDiv.classList.remove('hidden');

            try {
                const response = await fetch('/consulta', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ pregunta }),
                });
                const data = await response.json();
                respuestaDiv.innerHTML = data.respuesta;
            } catch (error) {
                respuestaDiv.innerHTML = 'Error al realizar la consulta.';
            }
        }
    </script>
</body>
</html>
